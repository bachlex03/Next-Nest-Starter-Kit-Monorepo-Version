{
  "name": "Next-Nest-Starter-Kit-Monorepo-Version",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "db:generate": "cross-env NODE_ENV=dev pnpm --filter @nnsk-monorepo/database-drizzle db:generate",
    "db:migrate": "cross-env NODE_ENV=dev pnpm --filter @nnsk-monorepo/database-drizzle db:migrate",
    "db:drop": "cross-env NODE_ENV=dev pnpm --filter @nnsk-monorepo/database-drizzle db:drop",
    "db:push": "cross-env NODE_ENV=dev pnpm --filter @nnsk-monorepo/database-drizzle db:push",
    "db:studio": "cross-env NODE_ENV=dev pnpm --filter @nnsk-monorepo/database-drizzle db:studio",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
